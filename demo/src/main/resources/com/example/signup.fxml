<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.SignUp"
           style="-fx-background-color: lightblue;">
<StackPane>
    <!-- Inner StackPane containing VBox -->
    <Rectangle width="300" height="8000" fill="navy" />
    <StackPane>
        <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1">
            <Label text="Signup" VBox.vgrow="ALWAYS" textFill="white"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Text text="First Name:" fill="white"/>
                <TextField text="Enter First Name"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Text text="Last Name:" fill="white"/>
                <TextField text="Enter Last Name"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Text text="USC ID:" fill="white"/>
                <TextField text="Enter USC ID"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Text text="Username:" fill="white"/>
                <TextField text="Enter Username"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Text text="Password:" fill="white"/>
                <TextField text="Enter Password"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="I am a:" textFill="white"/>
                <ComboBox fx:id="userType" layoutX="15.0" layoutY="33.0" prefWidth="90.0" promptText="Type">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Student" />
                            <String fx:value="Advisor" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <Button text="Signup" onAction="#SignUp" minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" VBox.vgrow="ALWAYS"/>
        </VBox>

    </StackPane>
</StackPane>
</StackPane>

