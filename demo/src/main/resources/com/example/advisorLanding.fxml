<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.AdvisorLanding"
      style="-fx-background-color: #EBF7F7;">
    <StackPane HBox.hgrow="NEVER" >
        <!-- Encapsulate the ImageView within a Pane to control its position -->
        <Pane>
            <ImageView fitHeight="220.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@logo.png" />
            </ImageView>
        </Pane>
    </StackPane>
    <StackPane HBox.hgrow="ALWAYS" style="-fx-alignment: top-left;">
        <padding>
            <Insets top="150" left="50"/>
        </padding>
        <Text fx:id="URL" text="ProgressPilot.com" fill="#136280"/>
    </StackPane>
</HBox>
