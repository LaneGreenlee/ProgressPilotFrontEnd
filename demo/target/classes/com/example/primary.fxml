<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.PrimaryController"
           style="-fx-background-color: lightblue;">
<StackPane>
    <!-- Inner StackPane containing VBox -->
    <Rectangle width="300" height="8000" fill="navy" />
    <StackPane>

        <!-- VBox containing other UI elements -->
        <VBox alignment="CENTER" spacing="20.0"
              styleClass="scene-background" maxWidth="10" maxHeight="10">

            <Text text="Welcome to ProgressPilot" VBox.vgrow="ALWAYS"  fill="white"/>
            <Button text="Sign in as Student" onAction="#signInAsUser" minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" VBox.vgrow="ALWAYS"/>
            <Button text="Sign in as Advisor" onAction="#signInAsAdvisor" minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" VBox.vgrow="ALWAYS"/>
            <Button text="Sign Up" onAction="#signUp" minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" VBox.vgrow="ALWAYS"/>
        </VBox>
    </StackPane>
</StackPane>
</StackPane>